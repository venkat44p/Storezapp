                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Ebay"
                                        android:layout_gravity="center"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
